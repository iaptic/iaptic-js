{
  "name": "iaptic-js",
  "version": "1.0.4",
  "description": "Iaptic JS integration library for the browser",
  "main": "dist/iaptic-js.js",
  "module": "dist/iaptic-js.esm.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/iaptic-js.esm.js",
      "require": "./dist/iaptic-js.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "docs": "typedoc src/index.ts",
    "docs-md": "typedoc --plugin typedoc-plugin-markdown --out ./docs-markdown.tmp --outputFileStrategy modules src/index.ts && ./postprocessMarkdown",
    "prepublishOnly": "npm run build && npm run docs-md"
  },
  "keywords": [
    "stripe",
    "payments",
    "subscriptions",
    "iaptic"
  ],
  "author": "Jean-Christophe Hoelt <hoelt@iaptic.com>",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "rollup": "^3.20.2",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.27.6",
    "typedoc-plugin-markdown": "^4.4.1",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "@stripe/stripe-js": "^1.54.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "customExportConditions": [
        "node",
        "node-addons"
      ]
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "<rootDir>/src/__tests__/setup.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.[tj]sx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
