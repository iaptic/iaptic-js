{
  "name": "iaptic-js",
  "version": "1.0.0",
  "description": "Iaptic JS integration library for the browser",
  "main": "dist/iaptic-js.js",
  "module": "dist/iaptic-js.esm.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/iaptic-js.esm.js",
      "require": "./dist/iaptic-js.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "docs": "typedoc src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "stripe",
    "payments",
    "subscriptions",
    "iaptic"
  ],
  "author": "Jean-Christophe Hoelt <hoelt@iaptic.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^16.0.0",
    "@jest/globals": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "rollup": "^3.20.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.1",
    "typescript": "^5.0.4",
    "rollup-plugin-dts": "^5.3.0"
  },
  "peerDependencies": {
    "@stripe/stripe-js": "^1.54.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "customExportConditions": ["node", "node-addons"]
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "<rootDir>/src/__tests__/setup.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": ["ts-jest", { "tsconfig": "tsconfig.json" }]
    },
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.[tj]sx?$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
} 
